<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="restaurant"
            type="com.android.myres.ui.restaurant.data.Restaurant"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/restaurantImage"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.name}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/restaurantImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/restaurantAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{restaurant.address}"
            android:textAppearance="?attr/textAppearanceBody1"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/restaurantName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/restaurantHours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text='@{"" + restaurant.hours }'
            android:textAppearance="?attr/textAppearanceBody2"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/restaurantAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/restaurantHours"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/mapsIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_maps"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/wazeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_maps"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
