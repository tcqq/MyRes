<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="dish"
            type="com.android.myres.ui.restaurant.data.Dish" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dishTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{dish.title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/dishPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{"Price: $" + dish.price}'
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/dishIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{"Ingredients: " + dish.ingredients}'
            android:textAppearance="?attr/textAppearanceBody2"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{dish.description}"
            android:textAppearance="?attr/textAppearanceBody1"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>
</layout>
